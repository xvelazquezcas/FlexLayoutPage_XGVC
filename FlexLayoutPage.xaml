<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlexLayoutPage_XGVC.FlexLayoutPage"
             Title="FlexLayoutPage">
    <FlexLayout Direction="Column">
        <!--Header-->
        <Label
            Text="Header"
            FontSize="18"
            Background="Red"
            HorizontalTextAlignment="Center"/>

        <!--Body-->
        <FlexLayout FlexLayout.Grow="1">

            <!--Content-->
            <Label 
                Text="Content"
                FontSize="18"
                BackgroundColor="Purple"
                HorizontalTextAlignment="Center"
                VerticalTextAlignment="Center"
                FlexLayout.Grow="1"/>
            <!--Navigation Page-->
            <BoxView
                FlexLayout.Basis="50"
                FlexLayout.Order="-1"
                Color="Blue"/>
            <BoxView
                FlexLayout.Basis="50"
                Color="Violet"/>

        </FlexLayout>
        <!--Footer-->
        <Label
            Text="Footer"
            FontSize="18"
            Background="Yellow"
            HorizontalTextAlignment="Center"/>
    </FlexLayout>

</ContentPage>