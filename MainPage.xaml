<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlexLayoutPage_XGVC.MainPage">


    <VerticalStackLayout
            Padding="20">
        <Label Text="Selecciona un Layout"
               FontAttributes="Bold"
               FontSize="20"
               HorizontalOptions="Center"
               >
            
        </Label>

        <Button 
            Text="FlexLayout"
            Clicked="Button_Clicked"
            CornerRadius="15"
            />
        <Label/>
        <Button Text="StackLayout"
                Clicked="Button_Clicked_1"
                CornerRadius="15"/>
        <Label/>
        <Button Text="AbsoluteLayout"
                Clicked="Button_Clicked_2"
                CornerRadius="15"/>
        <Label/>
        <Button Text="Grid"
                Clicked="Button_Clicked_3"
                CornerRadius="15"/>
    </VerticalStackLayout>
  
</ContentPage>
